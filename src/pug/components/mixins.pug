//- COMPONENTS
mixin socialMedia(array)
  each icon in array
    a(href="http://www.google.com" target="_blank")
      img(class= icon.class src= icon.path alt= icon.alt)

mixin figure(figClass, imgPath, imgAlt, capClass,capTextClass, capText)
  figure(class= figClass)
    img(src= imgPath alt= imgAlt)
    figcaption(class= capClass)
      h6(class= capTextClass)= capText

mixin review(array)
  each review in array
    .review
      .review__media
        img(class= "review__media__logo" src= review.path, alt= review.alt)
      each i in review.rating
        svg.review__star
          use(xlink:href= 'img/svg/sprite.svg#' + i)

mixin sectionHeading(id, text)
  h3.section__header(id= id)= text


//- HOME
mixin homeHeading(array)
  each letter in array
    span= letter

//- FORM
mixin formInputs(array, btnText)
  button.form__back__button Back
  each input in array
    label(for= input.id class='form__label')= input.placeholder
      input(class='form__input' id= input.id type=input.type)
  button.form__nextButton= btnText
